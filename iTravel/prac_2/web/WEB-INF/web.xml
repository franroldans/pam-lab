<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>error</servlet-name>
        <servlet-class>error</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>altaVuelo</servlet-name>
        <servlet-class>altaVuelo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscarVuelo</servlet-name>
        <servlet-class>buscarVuelo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bookSeat</servlet-name>
        <servlet-class>bookSeat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightsServletClient</servlet-name>
        <servlet-class>FlightsServletClient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>altaVuelo</servlet-name>
        <url-pattern>/altaVuelo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscarVuelo</servlet-name>
        <url-pattern>/buscarVuelo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bookSeat</servlet-name>
        <url-pattern>/bookSeat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightsServletClient</servlet-name>
        <url-pattern>/FlightsServletClient</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
